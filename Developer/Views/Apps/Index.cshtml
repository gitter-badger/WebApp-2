@section css{
    <link rel="stylesheet" href="@Values.CdnServerAddress/lib/chartist/dist/chartist.min.css">
}
@section js{
    <script src="@Values.CdnServerAddress/lib/chartist/dist/chartist.min.js"></script>
    <script>
        new Chartist.Line('.chartist-chart', {
            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
            series: [
              [12, 9, 7, 8, 5],
              [2, 1, 3.5, 7, 3],
              [1, 3, 4, 5, 6]
            ]
        }, {
            fullWidth: true,
            chartPadding: {
                right: 40
