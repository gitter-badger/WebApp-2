    <div class="main-menu">
        <header class="header">
            <a asp-controller="Apps" asp-action="Index" class="logo"><i class="ico mdi mdi-view-dashboard"></i>Account Settings</a>
            <button type="button" class="button-close fa fa-times js__menu_close"></button>
            <div class="user">
                <a href="#" class="avatar"><img src="@Model.UserIconAddress" alt=""><span class="status online"></span></a>
                <h5 class="name"><a href="profile.html">@Model.UserName</a></h5>
                <h5 class="position">Administrator</h5>
                <div class="control-wrap js__drop_down">
