                    <div class="control-list">
                        <div class="control-item"><a href="profile.html"><i class="fa fa-user"></i> Profile</a></div>
                        <div class="control-item"><a href="@(new AiurUrl(Values.DeveloperServerAddress))"><i class="fa fa-gear"></i> For Developers</a></div>
                        <div class="control-item"><a href="javascript:$('#logoutForm').submit()"><i class="fa fa-sign-out"></i> Log out</a></div>
                        <form class="hidden" asp-controller="Home" asp-action="LogOff" method="post" id="logoutForm"></form>
                    </div>
                </div>
            </div>
        </header>
        <div class="content">
            <div class="navigation">
                <h5 class="title">Account Settings</h5>
                <ul class="menu js__accordion">
                    <li class="@(Model.ActivePanel == 0 ? "current":"")">
                        <a class="waves-effect" asp-controller="Account" asp-action="Index"><i class="menu-icon mdi mdi-account-card-details"></i><span>Profile</span></a>
                    </li>
                    <li class="@(Model.ActivePanel == 1 ? "current":"")">
